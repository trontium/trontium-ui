{
  "name": "trontium-ui-monorepo",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trontium/trontium-ui.git"
  },
  "scripts": {
    "build:site": "pnpm --filter docs-site build",
    "build:ui": "pnpm --filter @trontium/ui build",
    "changeset": "changeset",
    "commit": "cz",
    "lint:ui": "pnpm --filter @trontium/ui lint",
    "prepare": "husky install",
    "release": "pnpm build:ui && changeset publish",
    "start": "pnpm --filter docs-site start",
    "test:ui": "pnpm --filter @trontium/ui test",
    "version": "changeset version"
  },
  "lint-staged": {
    "*.ts?(x)": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.less": [
      "prettier --write"
    ],
    "*.{md,html,json}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "17.3.0",
    "@commitlint/config-conventional": "17.3.0",
    "@trivago/prettier-plugin-sort-imports": "3.2.0",
    "@types/node": "16.11.26",
    "@umijs/fabric": "^4.0.1",
    "commitizen": "4.2.5",
    "cz-conventional-changelog": "3.3.0",
    "doctoc": "1.4.0",
    "eslint": "7.0.0",
    "husky": "8.0.0",
    "lint-staged": "13.0.0",
    "pnpm": "8.6.5",
    "prettier": "2.8.0",
    "prettier-plugin-packagejson": "2.3.0"
  }
}
